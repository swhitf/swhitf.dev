<!-- Contact Modal -->
<ContactModal />

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById("mobileMenuBtn");
  const mobileMenu = document.getElementById("mobileMenu");

  mobileMenuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  // Close mobile menu when clicking outside
  document.addEventListener("click", (e) => {
    if (
      !mobileMenuBtn?.contains(e.target as Node) &&
      !mobileMenu?.contains(e.target as Node)
    ) {
      mobileMenu?.classList.add("hidden");
    }
  });

  // Logo toggle functionality
  const headerContent = document.getElementById("headerContent");
  const logo = document.getElementById("logo");
  const logoToggle = document.getElementById("logoToggle");

  // Load collapse state from localStorage
  let isCollapsed = localStorage.getItem("logoCollapsed") === "true";

  function updateHeaderStyle() {
    const scrollPosition = window.scrollY;

    if (scrollPosition > 20) {
      headerContent?.classList.remove(
        "border-transparent",
        "w-full",
        "max-w-[1080px]"
      );
      headerContent?.classList.add(
        "border-gray-200",
        "shadow-sm",
        "rounded-2xl",
        "max-w-[960px]"
      );
    } else {
      headerContent?.classList.remove(
        "border-gray-200",
        "shadow-sm",
        "rounded-2xl",
        "max-w-[960px]"
      );
      headerContent?.classList.add(
        "border-transparent",
        "w-full",
        "max-w-[1080px]"
      );
    }
  }

  // Toggle logo collapse on button click
  logoToggle?.addEventListener("click", () => {
    isCollapsed = !isCollapsed;
    localStorage.setItem("logoCollapsed", isCollapsed.toString());
    updateLogoStyle();
    updateArrowState();
  });

  function updateArrowState() {
    if (!logoToggle) return;

    // Rotate arrow and change color
    if (isCollapsed) {
      logoToggle.style.transform = "rotate(180deg)";
      logoToggle.classList.remove("text-gray-700", "dark:text-white");
      logoToggle.classList.add("text-teal-700", "dark:text-teal-400");
    } else {
      logoToggle.style.transform = "rotate(0deg)";
      logoToggle.classList.remove("text-teal-700", "dark:text-teal-400");
      logoToggle.classList.add("text-gray-700", "dark:text-white");
    }
  }

  const logoElements = document.querySelectorAll("[data-set-width]");
    logoElements.forEach((element) => {
      const width = Math.ceil(element.getBoundingClientRect().width) ;
      (element as HTMLElement).dataset.width = `${width}`;
      (element as HTMLElement).style.width = `${width}px`;
    });

  function updateLogoStyle() {
    const logoElements = document.querySelectorAll("[data-set-width]");
    logoElements.forEach((element) => {
      const shrink = (element as HTMLElement).dataset.shrink === "true";
      const width = isCollapsed && shrink ? "0" : (element as HTMLElement).dataset.width;
      (element as HTMLElement).style.width = `${width}px`;
      (element as HTMLElement).style.opacity = isCollapsed && shrink ? "0" : "1";
    });
  }

  // Listen for scroll events
  window.addEventListener("scroll", updateHeaderStyle);

  // Check initial state
  updateHeaderStyle();
  updateLogoStyle();
  updateArrowState();

  // Theme toggle functionality
  const themeToggle = document.getElementById("themeToggle");
  const themeToggleMobile = document.getElementById("themeToggleMobile");

  function toggleTheme() {
    const html = document.documentElement;
    const isDark = html.classList.contains("dark");

    if (isDark) {
      html.classList.remove("dark");
      localStorage.setItem("theme", "light");
    } else {
      html.classList.add("dark");
      localStorage.setItem("theme", "dark");
    }
  }

  themeToggle?.addEventListener("click", toggleTheme);
  themeToggleMobile?.addEventListener("click", toggleTheme);
</script>
