---
// Header Component
import SayHelloButton from "./SayHelloButton.astro";
import ContactModal from "./ContactModal.astro";

const model = [
  { v: "[", color: "text-teal-700 dark:text-teal-400", shrink: true },
  { v: "s", color: "text-teal-700 dark:text-teal-400", shrink: false },
  { v: "]", color: "text-teal-700 dark:text-teal-400", shrink: true },
  { v: "teve", color: "text-gray-900 dark:text-white", shrink: true },
  { v: " ", color: "text-gray-900 dark:text-white", shrink: true },
  { v: "[", color: "text-teal-700 dark:text-teal-400", shrink: true },
  { v: "whitf", color: "text-teal-700 dark:text-teal-400", shrink: false },
  { v: "]", color: "text-teal-700 dark:text-teal-400", shrink: true },
  { v: "ield", color: "text-gray-900 dark:text-white", shrink: true },
  { v: " ", color: "text-gray-900 dark:text-white", shrink: true },
  { v: "[", color: "text-teal-700 dark:text-teal-400", shrink: true },
  { v: ".dev", color: "text-teal-700 dark:text-teal-400", shrink: false },
  { v: "]", color: "text-teal-700 dark:text-teal-400", shrink: true },
];
---

<header class="sticky top-4 z-50 mb-12">
  <div
    id="headerContent"
    class="flex items-center justify-between w-full max-w-[1080px] mx-auto border border-transparent backdrop-blur-sm px-6 py-3 transition-all duration-300"
  >
    <!-- Logo/Brand -->
    <div class="flex items-center gap-2">
      <a
        id="logo"
        href="/"
        class="text-xl font-bold hover:text-teal-400/80 transition-colors"
      >
        {
          model.map((item) => (
            <span data-shrink={item.shrink} data-set-width class={item.color}>
              {item.v === " " ? <>&nbsp;</> : item.v}
            </span>
          ))
        }
      </a>
      <button
        id="logoToggle"
        class="text-gray-700 dark:text-white hover:bg-gray-200 dark:hover:bg-white/20 rounded-full p-1.5 cursor-pointer "
        style="transition: transform 0.3s ease;"
        aria-label="Toggle logo"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
          <path fill-rule="evenodd" d="M17 10a.75.75 0 0 1-.75.75H5.612l4.158 3.96a.75.75 0 1 1-1.04 1.08l-5.5-5.25a.75.75 0 0 1 0-1.08l5.5-5.25a.75.75 0 1 1 1.04 1.08L5.612 9.25H16.25A.75.75 0 0 1 17 10Z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-8">
      <a
        href="/about"
        class="text-gray-700 dark:text-white/90 font-medium hover:text-teal-700 dark:hover:text-teal-400 transition-colors"
        >About</a
