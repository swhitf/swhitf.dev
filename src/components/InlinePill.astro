---
interface Props {
  href: string;
  icon?: 'favicon' | 'color' | 'emoji';
  iconSrc?: string;
  iconColor?: string;
  iconEmoji?: string;
}

const { href, icon, iconSrc, iconColor, iconEmoji } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center gap-1 px-2 bg-white/10 hover:bg-white/20 rounded-full transition-colors border border-white/20 hover:border-white/30 h-[1.5em]"
>
  {icon === 'favicon' && iconSrc && (
    <img src={iconSrc} alt="" class="w-4 h-4" />
  )}
  {icon === 'color' && iconColor && (
    <span class={`w-3 h-3 rounded-full ${iconColor}`}></span>
  )}
  {icon === 'emoji' && iconEmoji && (
    <span class="text-base leading-none">{iconEmoji}</span>
  )}
  <slot />
</a>
