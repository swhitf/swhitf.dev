---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/fonts.css';
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = 'Steve Whitfield' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="highlight-gradient" class="pointer-events-none absolute start-0 top-0 z-0 h-screen w-full opacity-25 astro-37fxchfa" style="background-image:linear-gradient(#659EB9,transparent); --highlightColor: #659EB9;"></div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		background-color: #0b0b10;
		color: white;
	}

	main {
		flex: 1;
	}
</style>
